      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
    <None Remove="debian\source\**" />
    <None Remove="debian\changelog" />
    <None Remove="debian\debhelper-build-stamp" />
    <None Remove="debian\docintel-webapp.substvars" />
    <None Remove="debian\docintel-webapp.debhelper.log" />
    <None Remove="debian\docintel-webapp.postinst.debhelper" />
    <None Remove="debian\docintel-webapp.postrm.debhelper" />
    <None Remove="debian\docintel-webapp.prerm.debhelper" />
    <None Remove="debian\files" />
  </ItemGroup>

  <ItemGroup>
    <_ContentIncludedByDefault Remove="activity-schemas\document-registration.json" />
    <_ContentIncludedByDefault Remove="debian\docintel-webapp\usr\lib\docintel\webapp\nlog.config" />
