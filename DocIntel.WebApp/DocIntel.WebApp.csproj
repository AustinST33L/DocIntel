  </ItemGroup>

  <ItemGroup>
      <FontFiles Include="..\fonts\*.ttf" /> 
   </ItemGroup>

  <ItemGroup>
    <Content Remove="out.json" />
    <Content Remove="debian\docintel-webapp\**" />
    <Content Remove="debian\source\**" />
  </ItemGroup>

  <ItemGroup>
    <None Remove="data_file_new.csv" />
    <None Remove="debian\docintel-webapp\**" />
