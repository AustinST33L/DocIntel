<Project Sdk="Microsoft.NET.Sdk.Web">

  <PropertyGroup>
    <TargetFramework>net6.0</TargetFramework>
    <RootNamespace>DocIntel.WebApp</RootNamespace>
    <LangVersion>default</LangVersion>
