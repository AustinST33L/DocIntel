@using DocIntel.Core.Authorization.Operations
@model Document

@{
    var canCreate = (await AuthorizationService.AuthorizeAsync(User, Model, DocumentOperations.AddFile)).Succeeded;
    var canViewDoc = (await AuthorizationService.AuthorizeAsync(User, Model, DocumentOperations.Read)).Succeeded;
    var canEdit = (await AuthorizationService.AuthorizeAsync(User, Model, DocumentOperations.Edit)).Succeeded;
    var canDelete = (await AuthorizationService.AuthorizeAsync(User, Model, DocumentOperations.Delete)).Succeeded;
    if (canViewDoc)
    {
        ViewData["Title"] = $"Files enclosed in '{Model.Title}'";
    }
    else
    {
        ViewData["Title"] = "Files";
    }
}

<div class="subheader">
    <h1 class="subheader-title">
        <i class="fal fa-file subheader-icon"></i> Files
    </h1>
    <div>
        <div class="btn-group">
            @if (canCreate)
            {
                <a asp-action="Create" asp-controller="File" asp-route-id="@Model.DocumentId" class= "btn btn-pills btn-primary waves-effect waves-themed">
                    <i class="fal fa-upload mr-1"></i> Upload File
                </a>
            }
            @if (canEdit)
            {
                <a asp-action="Edit" asp-controller="Document" asp-route-id="@Model.DocumentId"
                   class= "btn btn-pills btn-primary waves-effect waves-themed btn-iconified" id="edit-btn">
                    <i class="fal fa-edit mr-1"></i> Edit
                </a>
            }
            @if (canDelete)
            {
                <a asp-action="Delete" asp-controller="Document" asp-route-id="@Model.DocumentId" id="delete-btn"
                   class= "btn btn-pills btn-primary waves-effect waves-themed btn-iconified">
                    <i class="fal fa-trash-alt"></i> Delete
                </a>
            }
        </div>
    </div>
</div>

<div class="row">
    <div class="col-12">
        @if (canViewDoc)
        {
            <div class="panel">
                <div class="panel-hdr">
                    <h2>
                        Enclosing Document
                    </h2>
                </div>
                <div class="panel-container show">
                    <div class="panel-content">
                        @await Html.PartialAsync("../Document/_DocumentSummary", Model, new ViewDataDictionary(ViewData))
                    </div>
                </div>
            </div>
        }

        @if (Model != null && Model.Files.Any())
        {
            <div id="panel-source-info" class="panel">
                <div class="panel-container show">
                    <div class="panel-content p-0">
                        <table class="table table-striped m-0">
                            @foreach (var f in Model.Files)
                            {
                                <tr>
                                    <td class="align-middle">
                                        @if (f.OverrideClassification & !string.IsNullOrEmpty(f.Classification?.Abbreviation))
                                        {
                                            <span class="badge @f.Classification.Color">
                                                @f.Classification.Abbreviation
                                            </span>
                                        }
                                        else if (!f.OverrideClassification & !string.IsNullOrEmpty(Model.Classification?.Abbreviation))
                                        {
                                            <span class="badge @Model.Classification.Color">
                                                @Model.Classification.Abbreviation
                                            </span>
                                        }
                                        <a asp-action="Details" asp-route-id="@f.FileId" target="_blank">@(!string.IsNullOrEmpty(f.Title) ? f.Title.Trim() : "File")</a>
                                        @if (!f.Visible)
                                        {
                                            <span class="badge bg-danger">
                                                Hidden
                                            </span>
                                        }
                                        @if (f.AutoGenerated)
                                        {
                                            <span class="badge bg-default">
                                                Generated
                                            </span>
                                        }
                                        <br/>
                                        <div class="text-muted">
                                            @Html.Timeago(f.DocumentDate)
                                        </div>
                                    </td>
                                    <td class="text-right">
                                        <div class="btn-group btn-group-sm">
                                            <a asp-action="Download" asp-route-id="@f.FileId" class= "btn btn-pills btn-default waves-effect waves-themed">Download</a>
                                            <a asp-action="Details" asp-route-id="@f.FileId" class= "btn btn-pills btn-default waves-effect waves-themed">Details</a>
                                            <a asp-action="Update" asp-route-id="@f.FileId" class= "btn btn-pills btn-default waves-effect waves-themed">Edit</a>
                                            <a asp-action="Delete" asp-route-id="@f.FileId" class= "btn btn-pills btn-default waves-effect waves-themed">Delete</a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </table>
                    </div>
                </div>
            </div>
        }
        else
        {
            <div class="panel">
                <div class="panel-container show">
                    <div class="panel-content">
                        <div class="text-center fs-xl m-3">
                            <i class="fal fa-file fa-4x opacity-30 color-fusion-30 mb-2"></i><br/>
                            We found no files matching your criterias.<br/>
                            <small>Try later or contact your administrator.</small>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>