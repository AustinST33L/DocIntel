@using Microsoft.AspNetCore.Mvc.TagHelpers
@model Document

@{
    ViewData["Title"] = $"Delete document '{Model.Title}''";
}

<div class="subheader">
    <h1 class="subheader-title">
        <i class="fal fa-file-edit subheader-icon"></i> @Model.Title
    </h1>
</div>

<form asp-action="Delete">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="DocumentId"/>

    <div class="row">
        <div class="col-9">
            <div id="panel-danger" class="panel">
                <div class="panel-hdr bg-danger-900 bg-info-gradient">
                    <h2>
                        Are you sure you want to delete this document?
                    </h2>
                </div>
                <div class="panel-container show">
                    <div class="panel-content">
                        @await Html.PartialAsync("_DocumentSummary", Model, new ViewDataDictionary(ViewData))
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <button type="submit" class= "btn btn-pills btn-danger" id="delete-confirmation-btn">Yes, delete!</button>
            <a asp-action="Details" asp-route-url="@Model.URL" class="ml-3 text-success">No, don't delete!</a>
        </div>
    </div>

</form>