@using Microsoft.AspNetCore.Mvc.TagHelpers
@model Group

@{
    ViewData["Title"] = $"Delete group '{Model.Name}''";
}


<div class="subheader">
    <h1 class="subheader-title">
        <i class="fal fa-file-edit subheader-icon"></i> Delete group '@Model.Name'
    </h1>
</div>

<form asp-action="Delete">
    @Html.AntiForgeryToken()

    <div class="row">
        <div class="col-12">
            <div id="panel-danger" class="panel">
                <div class="panel-hdr bg-danger-900 bg-info-gradient">
                    <h2>
                        Are you sure you want to delete the group '@Model.Name'?
                    </h2>
                </div>

            </div>
        </div>
    </div>

    <input type="hidden" asp-for="GroupId"/>

    <div class="row">
        <div class="col-md-12">
            <button type="submit" class= "btn btn-pills btn-danger" id="delete-confirmation-btn">Yes, delete!</button>
            <a asp-action="Details" asp-route-id="@Model.GroupId" class="ml-3 text-success">No, don't delete!</a>
        </div>
    </div>

</form>