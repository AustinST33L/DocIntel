    <li class="nav-item dropdown mr-2 border-left ml-3 pl-3">
        <a class="nav-link dropdown-toggle text-nowrap" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true"
           aria-expanded="false">
            @Model.CurrentUser.FriendlyName
            @if (string.IsNullOrEmpty(Model.CurrentUser.ProfilePicture))
            {
                <img alt="" class="rounded-circle ml-1" src="~/images/icons/color/icons8-male-user-48.png" style="width: 32px"/>
            }
            else
            {
                <img alt="" class="rounded-circle ml-1" src="@Url.Action("ProfilePicture", "Account", new {userName = Model.CurrentUser.UserName})" style="width: 32px"/>
            }
        </a>
        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <a class="dropdown-item" asp-controller="User" asp-action="Profile" asp-route-username="@Model.CurrentUser.UserName">
                <span class="dropdown-icon">
                    <span data-feather="user"></span>
                </span>
                My profile
            </a>
            <a class="dropdown-item text-nowrap" asp-controller="Account" asp-action="Edit">
                <span class="dropdown-icon">
                    <span data-feather="settings"></span>
                </span>
                Account settings
            </a>
            <div class="dropdown-divider"></div>
            <a class="dropdown-item" asp-controller="Account" asp-action="Logout">
                <span class="dropdown-icon">
                    <span data-feather="log-out"></span>
                </span>
                Log out
            </a>
        </div>
    </li>
</ul>