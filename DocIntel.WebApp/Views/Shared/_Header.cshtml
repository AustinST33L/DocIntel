<form asp-action="Index" asp-controller="Search" class="form-inline flex-grow-1 d-flex">
    <span class="navbar-icon">
        <span data-feather="search"></span>
    </span>
    <input class="form-control flex-grow-1" id="SearchTerm" name="SearchTerm" type="text" placeholder="Search" aria-label="Search"
           value="@ViewData["searchTerm"]">
    <input id="tags" name="tags" type="hidden" value="@ViewData["searchTags"]"/>
</form>

