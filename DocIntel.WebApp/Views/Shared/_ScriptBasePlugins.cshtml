@{
    var theme = "mod-skin-default";
    var currentUser = (AppUser) ViewBag.CurrentUser;
    if (currentUser.Preferences != null && currentUser.Preferences.UI != null)
    {
        switch (currentUser.Preferences.UI.Theme)
        {
            case UserPreferences.UIPreferences.UITheme.Dark:
                theme = "mod-skin-dark";
                break;
            case UserPreferences.UIPreferences.UITheme.Light:
                theme = "mod-skin-light";
                break;
        }
    }
}

<script>
    function toggle(className, obj) {
        var $input = $(obj);
        if ($input.prop('checked')) $(className).show();
        else $(className).hide();
    }

    initApp.pushSettings("@theme");

    @if (currentUser.Preferences != null && currentUser.Preferences.UI != null)
    {
        if (currentUser.Preferences.UI.BiggerContentFont)
        {
            <text>layouts.bigFonts('on')</text>
        }

        if (currentUser.Preferences.UI.HighContrastText)
        {
            <text>layouts.highContrast('on')</text>
        }
    }

    $(document).ready(function()
    {
        DocIntel.initApp();
        
        $('.summernote').each(function () {
            $(this).summernote({
                height: 200,
                toolbar: [
                    ['style', ['style']],
                    ['font', ['bold', 'underline', 'clear']],
                    ['color', ['color']],
                    ['para', ['ul', 'ol', 'paragraph']],
                    ['table', ['table']],
                    ['insert', ['link', 'picture']],
                    ['view', ['fullscreen', 'codeview', 'help']],
                ],
                styleTags: [
                    'p',
                    { title: 'Heading 1', tag: 'h2', value: 'h2' },
                    { title: 'Heading 2', tag: 'h3', value: 'h3' },
                    { title: 'Heading 3', tag: 'h4', value: 'h4' },
                    'pre'
                ],
            });
        });
        
    });

</script>