@using DocIntel.Core.Authorization.Operations
@{
    var canEditProfile = (await AuthorizationService.AuthorizeAsync(User, null, UserOperations.EditOwn)).Succeeded;
    var canView = (await AuthorizationService.AuthorizeAsync(User, null, UserOperations.View)).Succeeded;
}


<div class="dropdown-header bg-trans-gradient d-flex flex-row py-4 rounded-top">
    <div class="d-flex flex-row align-items-center mt-1 mb-1 color-white">
        <span class="mr-2">
            @if (string.IsNullOrEmpty(ViewBag.CurrentUser.ProfilePicture))
            {
                <img alt="" class="profile-image rounded-circle" src="~/images/icons/color/icons8-male-user-48.png"/>
            }
            else
            {
                <img alt="" class="profile-image rounded-circle" src="@Url.Action("ProfilePicture", "Account", new {userName = ViewBag.CurrentUser.UserName})"/>
            }
        </span>
        <div class="info-card-text">
            <div class="fs-lg text-truncate text-truncate-lg">@ViewBag.CurrentUser.FriendlyName</div>
            <span class="text-truncate text-truncate-md opacity-80">&commat;@ViewBag.CurrentUser.UserName</span>
        </div>
    </div>
</div>

<div class="dropdown-divider m-0"></div>

@if (canEditProfile)
{
    <a class="dropdown-item fw-500 pt-3 pb-3" asp-controller="Account" asp-action="Edit">
        Edit profile
    </a>
}

@if (canView)
{
    <a class="dropdown-item fw-500 pt-3 pb-3" asp-controller="Account" asp-action="APIKeys">
        Manage API Keys
    </a>
}

<a class="dropdown-item fw-500 pt-3 pb-3" asp-controller="Account" asp-action="Subscriptions">
    Manage subscriptions
</a>

<div class="dropdown-divider m-0"></div>

<a href="#" class="dropdown-item" data-action="app-fullscreen">
    <span data-i18n="drpdwn.fullscreen">Fullscreen</span>
    <i class="float-right text-muted fw-n">F11</i>
</a>

<div class="dropdown-divider m-0"></div>

<a class="dropdown-item fw-500 pt-3 pb-3" asp-controller="Account" asp-action="Logout" id="dropdown-logout">
    <span data-i18n="drpdwn.page-logout">Logout</span>
    <span class="float-right fw-n">&commat;@ViewBag.CurrentUser.UserName</span>
</a>