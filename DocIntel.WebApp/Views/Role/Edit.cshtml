@model AppRole

@{
    ViewData["Title"] = $"Edit role '{Model.Name}'";
}


<div class="subheader">
    <h1 class="subheader-title">
        <i class="fal fa-users subheader-icon"></i> Edit role @Model.Name
    </h1>
</div>


<div class="row">
    <div class="col-9">

        <form asp-action="Edit">
            @Html.AntiForgeryToken()

            <div id="panel-source-info" class="panel">
                <div class="panel-hdr">
                    <h2>
                        Basic Information
                    </h2>
                </div>
                <div class="panel-container show">
                    <div class="panel-content">

                        <input asp-for="Id" type="hidden"/>

                        <div class="form-group">
                            <label asp-for="Name" class="control-label"></label>
                            <input asp-for="Name" class="form-control"/>
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Description" class="control-label"></label>
                            <input asp-for="Description" class="form-control"/>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                    </div>
                </div>
            </div>

            @await Html.PartialAsync("_PanelEditPermissions", Model, new ViewDataDictionary(ViewData))

            <button type="submit" id="save-btn" class= "btn btn-pills btn-success waves-effect waves-themed btn-iconified">
                <i class="fal fa-save"></i> Save
            </button>

        </form>


    </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}