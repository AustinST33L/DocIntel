@model Tag

@if (Model.MetaData != null)
{
    <div class="panel">
        <div class="panel-hdr">
            <h2>
                Metadata
            </h2>
        </div>
        <div class="panel-container show">
            <div class="panel-content">
                <dl class="row mb-0">
                    @foreach (var mt in Model.MetaData)
                    {
                        <dt class="col-sm-6">
                            @mt.Key
                        </dt>
                        <dd class="col-sm-6 text-truncate">
                            @mt.Value.ToString()
                        </dd>
                    }
                </dl>
            </div>
        </div>
    </div>
}